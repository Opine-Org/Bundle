{
    "name": "opine/bundle",
    "type": "library",
    "description": "Embed Opine projects withing other Opine projects",
    "keywords": [
        "bundle", "plugin"
    ],
    "license": "MIT",
    "authors": [
        {
            "name"    : "Ryan Mahoney",
            "email"   : "ryan@virtuecenter.com",
            "homepage": "http://opine-php.org",
            "role"    : "Developer"
        }
    ],
    "require": {
        "php"             : ">=7.0.0",
        "symfony/yaml"    : "3.1.6",
        "opine/container" : "~2.0",
        "opine/cache"     : "~2.0",
        "opine/route"     : "^3.0.14",
        "opine/config"    : "~3.0",
        "opine/interfaces": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.5.0"
    },
    "autoload": {
        "psr-4": {
            "Opine\\Bundle\\": "src/"
        }
    }
}
